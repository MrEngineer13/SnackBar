<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SnackBar"/>

    <style name="SnackBar.SnackBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">80dp</item>
        <item name="android:minWidth">288dp</item>
        <item name="android:maxWidth">568dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/sb__tablet_bkgnd</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">@dimen/sb__activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/sb__activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/sb__activity_vertical_margin</item>
        <item name="android:layout_gravity">bottom|left</item>
    </style>
</resources>
